                                        <div class="form-group">
                                            <input type="hidden" class="form-control form-control-user" id="RatedValue" name="RatedValue"
                                                   placeholder="Amount">
                                        </div>

                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="FeedBack" name="FeedBack"
                                                   placeholder="Feed Back...">
                                        </div>

                                        <div class="rating-css">
                                            <div class="star-icon">
                                                <input type="radio" name="rating1" id="rating1" value="false">
                                                <label for="rating1" class="fa fa-star"></label>
                                                <input type="radio" name="rating1" id="rating2" value="false">
                                                <label for="rating2" class="fa fa-star"></label>
                                                <input type="radio" name="rating1" id="rating3" value="false">
                                                <label for="rating3" class="fa fa-star"></label>
                                                <input type="radio" name="rating1" id="rating4" value="false">
                                                <label for="rating4" class="fa fa-star"></label>
                                                <input type="radio" name="rating1" id="rating5" value="false">
                                                <label for="rating5" class="fa fa-star"></label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <input type="submit" value="Rate" class="btn btn-primary btn-user btn-block" />
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <a class='btn btn-secondary btn-user btn-block' id="Add" href="@Url.Action("RequestedTOWServicesForRequester","TOWService")">Go Back</a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Rate modal -->

                </div>

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            @{
                @Html.Partial("~/Views/PartialView/_Footer.cshtml");
            }
