                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Welcome to TOW Rquests</h1>
                    <p class="mb-4">
                        List of services which you have been placed.
                    </p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">

                            <div class="row">
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary">TOWServices</h6>
                                </div>
                                <div class="col-sm-6 text-right">

                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="DT_load" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Vehicle Image</th>
                                            <th>Vehicle type</th>
                                            <th>Garage</th>
                                            <th>ShopOwnerName</th>
                                            <th>Reqested City</th>
                                            <th>Contact No</th>
                                            <th>ApproximateKMs</th>
                                            <th>Total Cost</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Rate modal -->
