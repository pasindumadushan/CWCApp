<script>

    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(document).ready(function () {
        LoadTable();

        $('#DT_load').on('click', '#Rate', function () {
            validateRate($(this).attr("data-id"));
        });

        $("#rating1").on('change', function () {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
                $("#RatedValue").val(1);
            } else {
                $(this).attr('value', 'false');
            }
        });
        $("#rating2").on('change', function () {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
                $("#RatedValue").val(2);
            } else {
                $(this).attr('value', 'false');
            }
        });
        $("#rating3").on('change', function () {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
                $("#RatedValue").val(3);
            } else {
                $(this).attr('value', 'false');
            }
        });
        $("#rating4").on('change', function () {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
                $("#RatedValue").val(4);
            } else {
                $(this).attr('value', 'false');
            }
        });
        $("#rating5").on('change', function () {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
                $("#RatedValue").val(5);
            } else {
                $(this).attr('value', 'false');
            }
        });

    });

    function LoadTable() {

                dataTable = $('#DT_load').DataTable({
                    "bDestroy": true,
                    "ajax": {
                        "url": '@Url.Action("GetRequestedTOWServicesForRequester", "TOWService")',
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        {
                            "data": "VehicleImage", "render": function (data) {
                                return `<img src='${data}' width='150px' heigth='150px'>`;
                            }, "width": "10%"
                        },
                        { "data": "TypeOfVehicle", "width": "10%" },
                        { "data": "GarageName", "width": "10%" },
                        { "data": "ShopOwnerName", "width": "10%" },
                        { "data": "ReqestedCity", "width": "10%" },
                        { "data": "ContactNo", "width": "10%" },
                        { "data": "ApproximateKMs", "width": "10%" },
                        { "data": "TotalCost", "width": "10%" },
                        {
                            "data": "TOWServiceID",
                            "render": function (data) {
                                return `<table class='table' width='100%' cellspacing='0' cellpadding='0'><tbody>

                                        <tr><td style='border: none;'>
                                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#RateModal" id="Rate" data-id='${data}'>
                                            Rate Us
                                        </button>
                                        </td>
                                        `;
                            }, "width": "10%"
                        }
                    ],
                    "language": {
                        "emptyTable": "no data found"
                    },
                    "width": "100%"
                });

    }


    function validateRate(id) {
        $(function () {
            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            $("#RateForm").validate({

                errorPlacement: function (error, element) {
                    var placement = $(element).data('error');
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    RatedValue: {
                        required: true,
                        max: 5,
                        number: true
                    },
                    FeedBack: {
                        required: true
                    }
                },
                messages: {
                    RatedValue: {
                        required: "Please rate!",
                        max: "Invalid input!",
                        number: "Invalid input!"
                    },
                    FeedBack: {
                        required: "Please give us a feedback!"
                    }
                },
                submitHandler: function (form) {
                    SaveRate(id);
                }

            });
        });
    }

    function SaveRate(id) {

        var TOWServiceID = id;
        var RatedValue = null;
        var FeedBack = $('#FeedBack').val();

        if ($('#RatedValue').val() == "") {
            RatedValue = 5
        }
        else {
            RatedValue = $('#RatedValue').val();
        }

        var rate = {
            ProductOrServiceId: TOWServiceID,
            RatedValue: RatedValue
        }

        var formData = new FormData();
        formData.append("rateData", JSON.stringify(rate));
        formData.append("feedBackData", JSON.stringify(FeedBack));

        $.ajax({
            type: "POST",
            url: '@Url.Action("SetRateTOW", "Rate")',
            dataType: 'json',
            contentType: false, //must for formdata
            processData: false, //must for formdata
            data: formData,
            ContentType: 'application/json; charset=utf-8',
             success: function (data) {

                 var AllFields = data.data;

                if (AllFields == null) {
                    alert("Server error!");
                }
                else {
                    alert("Thank you!");
                    $('#RateModal').modal('toggle');
                    window.location.href = '@Url.Action("RequestedTOWServicesForRequester", "TOWService")';
                }

            }
        });
    }
</script>

