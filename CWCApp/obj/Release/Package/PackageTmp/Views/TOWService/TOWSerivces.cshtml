</body>

<script src="~/wwwroot/Bootstrap Design/vendor/jquery/jquery.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/js/sb-admin-2.min.js"></script>
<script src="~/wwwroot/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script src="~/wwwroot/js/date.format.js"></script>
<script>

    $(document).ready(function () {
        LoadTable();
        
        ValidateTOWService();

        $('#DT_load').on('click', '#RequestTOW', function () {
            LoadRequestField($(this).attr("data-id"));
        });

        $('#TOWServiceForm').on('change', '#ApproximateKMs', function () {
            TotalCal($(this).val());
        });

        $('#DT_load').on('click', '#ReviewTOW', function () {
            LoadRateAndFeedBack($(this).attr("data-id"));
        });

    });

    function LoadTable() {

                dataTable = $('#DT_load').DataTable({
                    "bDestroy": true,
                    "ajax": {
                        "url": '@Url.Action("GetTOWSerivces", "TOWService")',
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        {
                            "data": "VehicleImage", "render": function (data) {
                                return `<img src='${data}' width='150px' heigth='150px'>`;
                            }, "width": "10%"
                        },
                        { "data": "GarageName", "width": "10%" },
                        { "data": "TypeOfVehicleOwn", "width": "10%" },
                        { "data": "MaxPayLoad", "width": "10%" },
                        { "data": "NoOfVehicleOwn", "width": "10%" },
                        { "data": "RatePerKm", "width": "10%" },
                        { "data": "RangeOfService", "width": "10%" },
                        { "data": "ExtraFeatures", "width": "10%" },
                        { "data": "AvgRate", "width": "10%" },
                        {
                            "data": "TOWServiceID",
                            "render": function (data) {
                                return `<table class='table' width='100%' cellspacing='0' cellpadding='0'><tbody>

                                        <tr><td style='border: none;'>
                                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#RequestModal" id="RequestTOW" data-id='${data}'>
                                            Request TOW
                                        </button>
                                        <td style='border: none;'>
                                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#ReviewModal" id="ReviewTOW" data-id='${data}'>
                                          Reviews<img src='/Images/SystemPhotos/starrating.png' width='30px' heigth='30px'>
                                        </button>
                                        </td>
                                        `;
                            }, "width": "10%"
                        }
                    ],
                    "language": {
                        "emptyTable": "no data found"
                    },
                    "width": "100%"
                });

    }

    function LoadRequestField(TOWServiceID) {

        var TOWServiceID = {
            TOWServiceID: TOWServiceID
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadFieldsModal", "TOWService")',
            dataType: 'json',
            data: TOWServiceID,
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {
                console.log(data.data);
                var AllFields = data.data;
                if (data.data != null) {
                    $("#TOWServiceID").val(AllFields.TOWServiceID);
                    $("#ShopOwnerId").val(AllFields.ShopOwnerId);
                    $("#GarageName").text(AllFields.GarageName);
                    $("#TypeOfVehicleOwn").text(AllFields.TypeOfVehicleOwn);
                    $("#MaxPayLoad").text(AllFields.MaxPayLoad);
                    $("#RatePerKm").val(AllFields.RatePerKm);
                    $("#RatePerKmCard").text(AllFields.RatePerKm);
                    $("#RangeOfService").text(AllFields.RangeOfService);
                    $("#ExtraFeatures").text(AllFields.ExtraFeatures);
                    $('#VehicleImage').attr("src", (data.data.VehicleImage));
                }
                else {
                    alert("Server Error!");
                    $("#TOWServiceID").val(0);
                }


            }
        });
    }

    function LoadRateAndFeedBack(productOrServiceId) {
        var productOrServiceId = {
            productOrServiceId: productOrServiceId
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("GetRateFeedbackByTOWProductId", "TOWService")',
            dataType: 'json',
            data: productOrServiceId,
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {
                $("#Reviews").empty();
                var AllFields = data.data;

                for (let i = 0; i < AllFields.length; i++) {
                    var date = new Date(parseInt(AllFields[i].CreatedDate.substr(6)));
                    var formatDate = date.format("ddd mmm dd yyyy HH:MM:ss");

                    if (AllFields[i].RatedValue == 1) {
                        $("#Reviews").append('<div class="card mb-4 py-2 border-bottom-danger"><div class="card-header">' + AllFields[i].RatedUserName + '&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa fa-star checked"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span>&nbsp;&nbsp;&nbsp;&nbsp;' + formatDate + '</div> <div class="card-body"><div class="card shadow mb-1"><div class="card-body">' + AllFields[i].FeedBack1 + '</div></div><div class="card shadow mb-1" style="margin-left: 20px;"><div class="card-body">Reply : ' + AllFields[i].ServiceFeedBack1 + '</div></div></div></div>');
                    }
                    else if (AllFields[i].RatedValue == 2){
                        $("#Reviews").append('<div class="card mb-4 py-2 border-bottom-danger"><div class="card-header">' + AllFields[i].RatedUserName + '&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star"></span><span class="fa fa-star"></span><span class="fa fa-star"></span>&nbsp;&nbsp;&nbsp;&nbsp;' + formatDate + '</div> <div class="card-body"><div class="card shadow mb-1"><div class="card-body">' + AllFields[i].FeedBack1 + '</div></div><div class="card shadow mb-1" style="margin-left: 20px;"><div class="card-body">Reply : ' + AllFields[i].ServiceFeedBack1 + '</div></div></div></div>');
                    }
                    else if (AllFields[i].RatedValue == 3) {
                        $("#Reviews").append('<div class="card mb-4 py-2 border-bottom-warning"><div class="card-header">' + AllFields[i].RatedUserName + '&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star"></span><span class="fa fa-star"></span>&nbsp;&nbsp;&nbsp;&nbsp;' + formatDate + '</div> <div class="card-body"><div class="card shadow mb-1"><div class="card-body">' + AllFields[i].FeedBack1 + '</div></div><div class="card shadow mb-1" style="margin-left: 20px;"><div class="card-body">Reply : ' + AllFields[i].ServiceFeedBack1 + '</div></div></div></div>');
                    }
                    else if (AllFields[i].RatedValue == 4) {
                        $("#Reviews").append('<div class="card mb-4 py-2 border-bottom-success"><div class="card-header">' + AllFields[i].RatedUserName + '&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star"></span>&nbsp;&nbsp;&nbsp;&nbsp;' + formatDate + '</div> <div class="card-body"><div class="card shadow mb-1"><div class="card-body">' + AllFields[i].FeedBack1 + '</div></div><div class="card shadow mb-1" style="margin-left: 20px;"><div class="card-body">Reply : ' + AllFields[i].ServiceFeedBack1 + '</div></div></div></div>');
                    }
                    else if (AllFields[i].RatedValue == 5) {
                        $("#Reviews").append('<div class="card mb-4 py-2 border-bottom-success"><div class="card-header">' + AllFields[i].RatedUserName + '&nbsp;&nbsp;&nbsp;&nbsp;<span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star checked"></span><span class="fa fa-star checked"></span>&nbsp;&nbsp;&nbsp;&nbsp;' + formatDate + '</div> <div class="card-body"><div class="card shadow mb-1"><div class="card-body">' + AllFields[i].FeedBack1 + '</div></div><div class="card shadow mb-1" style="margin-left: 20px;"><div class="card-body">Reply : ' + AllFields[i].ServiceFeedBack1 + '</div></div></div></div>');
                    }

                    
                }
                

            }
        });

    }

    function ValidateTOWService() {
        $(function () {
            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            $("#TOWServiceForm").validate({

                errorPlacement: function (error, element) {
                    var placement = $(element).data('error');
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    ReqestedCity: {
                        required: true
                        //umailExist: true,
                    },
                    ApproximateKMs: {
                        required: true,
                        number: true
                    },
                    ContactNo: {
                        required: true
                    }
                },
                messages: {
                    ReqestedCity: {
                        required: "Please fill this field!"
                        //umailExist: true,
                    },
                    ApproximateKMs: {
                        required: "Please fill this field!",
                        number: "Invalid number!"
                    },
                    ContactNo: {
                        required: "Please fill this field!"
                    }
                },
                submitHandler: function (form) {
                    SaveTOWServiceRequest();
                }

            });
        });
    }

    function SaveTOWServiceRequest() {

        var TOWServiceID = $("#TOWServiceID").val();
        var ShopOwnerId = $("#ShopOwnerId").val();
        var ReqestedCity = $("#ReqestedCity").val();
        var ContactNo = $("#ContactNo").val();
        var ApproximateKMs = $("#ApproximateKMs").val();
        var TotalCost = $("#TotalCost").text();

        var requestedTOWDetails = {
            TOWServiceID: TOWServiceID,
            ShopOwnerId: ShopOwnerId,
            ReqestedCity: ReqestedCity,
            ContactNo: ContactNo,
            ApproximateKMs: ApproximateKMs,
            TotalCost: TotalCost
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveTOWServiceRequest", "TOWService")',
            dataType: 'json',
            //contentType: false, //must for formdata
            //processData: false, //must for formdata
            ContentType: 'application/json; charset=utf-8',
            data: requestedTOWDetails,
            success: function (data) {

                var AllFields = data.data;

                if (AllFields.StoreId <= 0) {
                    alert("Server error!");
                }
                else {
                    alert("Successfully saved!");
                    window.location.href = '@Url.Action("TOWSerivces", "TOWService")';
                }

            }
        });
    }

    function TotalCal(ApproximateKMs) {
        $('#TotalCost').text(ApproximateKMs * $("#RatePerKmCard").text());
    }
</script>

