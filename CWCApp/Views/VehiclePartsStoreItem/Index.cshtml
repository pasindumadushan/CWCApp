                                                    <input type="hidden" class="form-control form-control-user" id="ItemId" name="ItemId"
                                                           placeholder="Item Id">
                                                <div class="form-group">
                                                    <select class="form-control" id="StoreName" name="StoreName" disabled>
                                                        <option value="" selected disabled>Select Store...</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user" id="ItemName" name="ItemName"
                                                           placeholder="Item Name" disabled>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user" id="ItemType" name="ItemType"
                                                           placeholder="Item Type">
                                                </div>
                                                <div class="form-group">
                                                    <input type="number" class="form-control form-control-user" id="ItemTotalAmount" name="ItemTotalAmount"
                                                           placeholder="Amount" min=5>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user" id="ItemBrand" name="ItemBrand"
                                                           placeholder="Brand" disabled>
                                                </div>
                                                <div class="form-group">
                                                    <textarea class="form-control form-control-user" id="ItemDiscription" name="ItemDiscription"
                                                              placeholder="Discription..."></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user" id="RetailPrice" name="RetailPrice"
                                                           placeholder="Retail price" disabled>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user" id="WholeSalePrice" name="WholeSalePrice"
                                                           placeholder="Whole Sale price for more than 10 items" disabled>
                                                </div>

                                                <div class="form-group">
                                                    <input type="text" class="form-control form-control-user" id="ItemSpecs" name="ItemSpecs"
                                                           placeholder="Specs">
                                                </div>

                                                <div class="form-group">
                                                    <Table>
                                                        <tr>
                                                            <td><label>Image</label></td>
                                                            <td>
                                                                <div class="col-md-offset-2 col-md-10">
                                                                    <input type="file" id="file" name="file" accept="image/*">
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </Table>
                                                </div>

                                                <div class="form-group">
                                                    <tr>
                                                        <td>
                                                            <div style="height:200px; width:200px; overflow:auto;">
                                                                <img id="imgPhoto" alt="Image">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <canvas id="canvas" height="5" width="5" style="vertical-align:top;"></canvas>
                                                        </td>
                                                    </tr>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <input type="submit" value="Update" class="btn btn-primary btn-user btn-block" />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <a class='btn btn-primary btn-user btn-block' id="Add" href="@Url.Action("Index","VehiclePartsStoreItem")">Go Back</a>
                                                        </div>
                                                    </div>
                                                </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Edit modal -->

                </div>

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            @{
                @Html.Partial("~/Views/PartialView/_Footer.cshtml");
            }
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    @{
        @Html.Partial("~/Views/PartialView/_LogoutModal.cshtml");
    }

</body>

