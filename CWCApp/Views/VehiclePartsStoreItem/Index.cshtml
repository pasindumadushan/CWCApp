                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Welcome to stores items</h1>
                    <p class="mb-4">
                        List of items related to several spare parts alone with details.
                    </p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">

                            <div class="row">
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary">Store Items</h6>
                                </div>
                                <div class="col-sm-6 text-right">
                                    <a class='btn btn-primary' id="Add" href="@Url.Action("AddView","VehiclePartsStoreItem")">Add Item</a>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="DT_load" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Store Name</th>
                                            <th>Item Name</th>
                                            <th>Type</th>
                                            <th>Total Amount</th>
                                            <th>Bought Amount</th>
                                            <th>Left Items</th>
                                            <th>Brand</th>
                                            <th>Discription</th>
                                            <th>Retail Price(Per 1)</th>
                                            <th>Whole Sale Price(Per 1)</th>
                                            <th>Specs</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Edit modal -->
                    <div class='modal fade' id='EditModal' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true'>
