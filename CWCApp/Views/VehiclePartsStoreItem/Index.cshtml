<script src="~/wwwroot/Bootstrap Design/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/js/sb-admin-2.min.js"></script>
<script src="~/wwwroot/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script>

    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(document).ready(function () {
        LoadTable();
        LoadStore();
        ValidateVehiclePartsStoreItem()

        $('#file').change(function () {
            readFile(this);
        });

        $('#DT_load').on('click', '#DeleteYes', function () {
            DeleteRecord($(this).attr("data-id"));
        });

        $('#DT_load').on('click', '#Edit', function () {
            LoadFieldsEdit($(this).attr("data-id"));
        });

    });

    function LoadTable() {

                dataTable = $('#DT_load').DataTable({
                    "bDestroy": true,
                    "ajax": {
                        "url": '@Url.Action("LoadTableData", "VehiclePartsStoreItem")',
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        {
                            "data": "ItemImage", "render": function (data) {
                                return `<img src='${data}' width='150px' heigth='150px'>`;
                            }, "width": "10%"
                        },
                        { "data": "StoreName", "width": "10%" },
                        { "data": "ItemName", "width": "10%" },
                        { "data": "ItemType", "width": "10%" },
                        { "data": "ItemTotalAmount", "width": "10%" },
                        { "data": "ItemBoughtAmount", "width": "10%" },
                        { "data": "ItemBalance", "width": "10%" },
                        { "data": "ItemBrand", "width": "10%" },
                        { "data": "ItemDiscription", "width": "10%" },
                        { "data": "RetailPrice", "width": "10%" },
                        { "data": "WholeSalePrice", "width": "10%" },
                        { "data": "ItemSpecs", "width": "10%" },
                        {
                            "data": "ItemId",
                            "render": function (data) {
                                return `<table class='table' width='100%' cellspacing='0' cellpadding='0'><tbody>

                                        <tr><td style='border: none;'>
                                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#EditModal" id="Edit" data-id='${data}'>
                                            Edit
                                        </button>
                                        </td>

                                        <td style='border: none;'>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeleteModal${data}" id="Delete" data-id='${data}'>
                                            Delete
                                        </button>
                                        </td></tr>

                                        <div class='modal fade' id='DeleteModal${data}' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true'>
                                        <div class='modal-dialog' role='document'>
                                        <div class='modal-content'>
                                        <div class='modal-header'>
                                        <h5 class='modal-title' id='exampleModalLabel'>Warning!</h5>
                                        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                                        <span aria-hidden='true'>&times;</span>
                                        </button>
                                        </div>
                                        <div class='modal-body'>
                                        Are you sure, do you want to delete this record?
                                        </div>
                                        <div class='modal-footer'>
                                        <button type='button' class='btn btn-primary' id='DeleteYes' data-id='${data}'>Yes</button>
                                        <button type='button' class='btn btn-secondary' data-dismiss='modal'>No</button>
                                        </div>
                                        </div>
                                        </div>
                                        </div>
                                        `;
                            }, "width": "10%"
                        }
                    ],
                    "language": {
                        "emptyTable": "no data found"
                    },
                    "width": "100%"
                });

    }

    function LoadStore() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadStores", "VehiclePartsStoreItem")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {

                var Stores = data.data;
                for (var i = 0; i < Stores.length; i++) {

                    var newOption = new Option(Stores[i].StoreName, Stores[i].StoreId, false, false);
                    $('#StoreName').append(newOption).trigger('change');
                }

            }
        });
    }

    function LoadFieldsEdit(ItemId) {

        var ItemId = {
            ItemId: ItemId
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadFieldsEdit", "VehiclePartsStoreItem")',
            dataType: 'json',
            data: ItemId,
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {

                var AllFields = data.data;
                if (data.data != null) {
                    $("#ItemId").val(AllFields.ItemId);
                    $("#StoreName").val(AllFields.StoreId);
                    $("#ItemName").val(AllFields.ItemName);
                    $("#ItemType").val(AllFields.ItemType);
                    $("#ItemTotalAmount").val(AllFields.ItemTotalAmount);
                    $("#ItemBrand").val(AllFields.ItemBrand);
                    $("#ItemDiscription").val(AllFields.ItemDiscription);
                    $("#RetailPrice").val(AllFields.RetailPrice);
                    $("#WholeSalePrice").val(AllFields.WholeSalePrice);
                    $("#ItemSpecs").val(AllFields.ItemSpecs);
                    $("#ItemSpecs").val(AllFields.ItemSpecs);
                    $("#ItemSpecs").val(AllFields.ItemSpecs);
                }
                else {
                    alert("Server Error!");
                    $("#ItemId").val(0);
                }


            }
        });
    }

    function DeleteRecord(ItemId) {

        var ItemId = ItemId;

        var ItemId = {
            ItemId: ItemId
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteVehiclePartsStoreItem", "VehiclePartsStoreItem")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            data: ItemId,
            success: function (data) {

                var AllFields = data.data;

                if (AllFields.StoreId <= 0) {
                    alert("Server error!");
                }
                else {
                    alert("Successfully deleted!");
                    $('#DeleteModal' + AllFields.StoreId).modal('toggle');
                    window.location.href = '@Url.Action("Index","VehiclePartsStoreItem")';
                }

            }
        });
    }

    function LoadShoppingMethods() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadShoppingMethods", "VehiclePartsStore")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {

                var ShoppingMethods = data.data;
                for (var i = 0; i < ShoppingMethods.length; i++) {

                    var newOption = new Option(ShoppingMethods[i].ShoppingMethod, ShoppingMethods[i].ShoppingMethodId, false, false);
                    $('#ShoppingMethod').append(newOption).trigger('change');
                }

            }
        });
    }

    function ValidateVehiclePartsStoreItem() {
        $(function () {
            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            jQuery.validator.addMethod("filesize_max", function (value, element, param) {
                var isOptional = this.optional(element),
                    file;

                if (isOptional) {
                    return isOptional;
                }

                if ($(element).attr("type") === "file") {
                    if (element.files && element.files.length) {
                        file = element.files[0];
                        return (file.size && file.size <= param);
                    }
                }
                return false;
            }, "File size is too large.");

            $("#ItemForm").validate({

                errorPlacement: function (error, element) {
                    var placement = $(element).data('error');
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    StoreName: {
                        required: true
                        //umailExist: true,
                    },
                    ItemName: {
                        required: true
                    },
                    ItemType: {
                        required: true
                    },
                    ItemTotalAmount: {
                        required: true
                        //umailExist: true,
                    },
                    ItemBrand: {
                        required: true
                    },
                    ItemDiscription: {
                        required: true
                    },
                    RetailPrice: {
                        required: true
                        //umailExist: true,
                    },
                    WholeSalePrice: {
                        required: true
                    },
                    ItemSpecs: {
                        required: true
                    },
                    file: {
                        filesize_max: 800000
                    }
                },
                messages: {
                    StoreName: {
                        required: "Please fill this field!"
                        //umailExist: true,
                    },
                    ItemName: {
                        required: "Please fill this field!"
                    },
                    ItemType: {
                        required: "Please fill this field!"
                    },
                    ItemTotalAmount: {
                        required: "Please fill this field!"
                        //umailExist: true,
                    },
                    ItemBrand: {
                        required: "Please fill this field!"
                    },
                    ItemDiscription: {
                        required: "Please fill this field!"
                    },
                    RetailPrice: {
                        required: "Please fill this field!"
                        //umailExist: true,
                    },
                    WholeSalePrice: {
                        required: "Please fill this field!"
                    },
                    ItemSpecs: {
                        required: "Please fill this field!"
                    },
                    file: {
                        filesize_max: "File too large please input less than 800KB"
                    }
                },
                submitHandler: function (form) {
                    SaveVehiclePartsStoreItem();
                }

            });
        });
    }

     function SaveVehiclePartsStoreItem() {

         var ItemId = $("#ItemId").val();
        var StoreName = $("#StoreName").val();
        var ItemName = $("#ItemName").val();
        var ItemType = $("#ItemType").val();
        var ItemTotalAmount = $("#ItemTotalAmount").val();
        var ItemBrand = $("#ItemBrand").val();
        var RetailPrice = $("#RetailPrice").val();
        var ItemDiscription = $("#ItemDiscription").val();
        var WholeSalePrice = $("#WholeSalePrice").val();
        var ItemSpecs = $("#ItemSpecs").val();

         var vehiclePartsStoreItem = {
            ItemId: ItemId,
            StoreId: StoreName,
            ItemName: ItemName,
            ItemType: ItemType,
            ItemTotalAmount: ItemTotalAmount,
            ItemBrand: ItemBrand,
            RetailPrice: RetailPrice,
            ItemDiscription: ItemDiscription,
            WholeSalePrice: WholeSalePrice,
            ItemSpecs: ItemSpecs
        }

        var formData = new FormData();
        var file = $('#file').get(0).files;
        formData.append("imageFile", file[0]);
        formData.append("data", JSON.stringify(vehiclePartsStoreItem));

        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveVehiclePartsStoreItem", "VehiclePartsStoreItem")',
            dataType: 'json',
            contentType: false, //must for formdata
            processData: false, //must for formdata
            ContentType: 'application/json; charset=utf-8',
            data: formData,
            success: function (data) {

                var AllFields = data.data;

                if (AllFields.StoreId <= 0) {
                    alert("Server error!");
                }
                else {
                    alert("Successfully saved!");
                    window.location.href = '@Url.Action("Index","VehiclePartsStoreItem")';
                }

            }
        });
    }

    function readFile(input) {

        console.log("asda" + input);
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            /*Destroy jcrop initialization other wise it will hold it previous image in img tag*/
            if (jcropApi != null) {
                jcropApi.destroy();
            }
            reader.onload = function (e) {
                $('#imgPhoto').attr('src', "");
                var img = $('#imgPhoto').attr('src', e.target.result);

                /*Current uploaded image size*/
                var width = img[0].height;
                var height = img[0].width;
                $("#lblWidth").text(width + "px");
                $("#lblHeight").text(height + "px");

            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
