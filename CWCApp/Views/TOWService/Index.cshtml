<script src="~/wwwroot/Bootstrap Design/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/js/sb-admin-2.min.js"></script>
<script src="~/wwwroot/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script>

    var imageCropWidth = 0;
    var imageCropHeight = 0;
    var cropPointX = 0;
    var cropPointY = 0;
    var jcropApi;

    $(document).ready(function () {
        LoadTable();
        LoadGarage();
        ValidateTOWService();

        $('#file').change(function () {
            readFile(this);
        });

        $('#DT_load').on('click', '#DeleteYes', function () {
            DeleteRecord($(this).attr("data-id"));
        });

        $('#DT_load').on('click', '#Edit', function () {
            LoadFieldsEdit($(this).attr("data-id"));
        });

    });

    function LoadTable() {

                dataTable = $('#DT_load').DataTable({
                    "bDestroy": true,
                    "ajax": {
                        "url": '@Url.Action("LoadTableData", "TOWService")',
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        {
                            "data": "VehicleImage", "render": function (data) {
                                return `<img src='${data}' width='150px' heigth='150px'>`;
                            }, "width": "10%"
                        },
                        { "data": "GarageName", "width": "10%" },
                        { "data": "TypeOfVehicleOwn", "width": "10%" },
                        { "data": "MaxPayLoad", "width": "10%" },
                        { "data": "NoOfVehicleOwn", "width": "10%" },
                        { "data": "RatePerKm", "width": "10%" },
                        { "data": "RangeOfService", "width": "10%" },
                        { "data": "ExtraFeatures", "width": "10%" },
                        {
                            "data": "TOWServiceID",
                            "render": function (data) {
                                return `<table class='table' width='100%' cellspacing='0' cellpadding='0'><tbody>

                                        <tr><td style='border: none;'>
                                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#EditModal" id="Edit" data-id='${data}'>
                                            Edit
                                        </button>
                                        </td>

                                        <td style='border: none;'>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeleteModal${data}" id="Delete" data-id='${data}'>
                                            Delete
                                        </button>
                                        </td></tr>

                                        <div class='modal fade' id='DeleteModal${data}' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true'>
                                        <div class='modal-dialog' role='document'>
                                        <div class='modal-content'>
                                        <div class='modal-header'>
                                        <h5 class='modal-title' id='exampleModalLabel'>Warning!</h5>
                                        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                                        <span aria-hidden='true'>&times;</span>
                                        </button>
                                        </div>
                                        <div class='modal-body'>
                                        Are you sure, do you want to delete this record?
                                        </div>
                                        <div class='modal-footer'>
                                        <button type='button' class='btn btn-primary' id='DeleteYes' data-id='${data}'>Yes</button>
                                        <button type='button' class='btn btn-secondary' data-dismiss='modal'>No</button>
                                        </div>
                                        </div>
                                        </div>
                                        </div>
                                        `;
                            }, "width": "10%"
                        }
                    ],
                    "language": {
                        "emptyTable": "no data found"
                    },
                    "width": "100%"
                });

    }

    function LoadGarage() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadGarages", "TOWService")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {

                var Stores = data.data;
                for (var i = 0; i < Stores.length; i++) {

                    var newOption = new Option(Stores[i].GarageName, Stores[i].GarageId, false, false);
                    $('#GarageName').append(newOption).trigger('change');
                }

            }
        });
    }

    function LoadFieldsEdit(TOWServiceID) {
        var TOWServiceID = {
            TOWServiceID: TOWServiceID
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadFieldsEdit", "TOWService")',
            dataType: 'json',
            data: TOWServiceID,
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {

                var AllFields = data.data;
                if (data.data != null) {
                    $("#TOWServiceID").val(AllFields.TOWServiceID);
                    $("#GarageName").val(AllFields.GarageId);
                    $("#TypeOfVehicleOwn").val(AllFields.TypeOfVehicleOwn);
                    $("#MaxPayLoad").val(AllFields.MaxPayLoad);
                    $("#NoOfVehicleOwn").val(AllFields.NoOfVehicleOwn);
                    $("#RatePerKm").val(AllFields.RatePerKm);
                    $("#RangeOfService").val(AllFields.RangeOfService);
                    $("#ExtraFeatures").val(AllFields.ExtraFeatures);
                }
                else {
                    alert("Server Error!");
                    $("#TOWServiceID").val(0);
                }


            }
        });
    }

    function DeleteRecord(TOWServiceID) {

        var TOWServiceID = {
            TOWServiceID: TOWServiceID
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteTOWService", "TOWService")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            data: TOWServiceID,
            success: function (data) {

                var AllFields = data.data;

                if (AllFields.TOWServiceID <= 0) {
                    alert("Server error!");
                }
                else {
                    alert("Successfully deleted!");
                    $('#DeleteModal' + AllFields.TOWService).modal('toggle');
                    window.location.href = '@Url.Action("Index", "TOWService")';
                }

            }
        });
    }

    function ValidateTOWService() {
        $(function () {
            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            jQuery.validator.addMethod("filesize_max", function (value, element, param) {
                var isOptional = this.optional(element),
                    file;

                if (isOptional) {
                    return isOptional;
                }

                if ($(element).attr("type") === "file") {
                    if (element.files && element.files.length) {
                        file = element.files[0];
                        return (file.size && file.size <= param);
                    }
                }
                return false;
            }, "File size is too large.");

            $("#TOWServiceForm").validate({

                errorPlacement: function (error, element) {
                    var placement = $(element).data('error');
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    TypeOfVehicleOwn: {
                        required: true
                        //umailExist: true,
                    },
                    MaxPayLoad: {
                        required: true,
                        number: true
                    },
                    NoOfVehicleOwn: {
                        required: true
                    },
                    RatePerKm: {
                        required: true,
                        number: true
                    },
                    RangeOfService: {
                        required: true
                    },
                    ExtraFeatures: {
                        required: true
                    },
                    file: {
                        filesize_max: 800000
                    }
                },
                messages: {
                    TypeOfVehicleOwn: {
                        required: "Please fill this field!"
                        //umailExist: true,
                    },
                    MaxPayLoad: {
                        required: "Please fill this field!",
                        number: "Invalid number!"
                    },
                    NoOfVehicleOwn: {
                        required: "Please fill this field!"
                    },
                    RatePerKm: {
                        required: "Please fill this field!",
                        number: "Invalid number!"
                    },
                    RangeOfService: {
                        required: "Please fill this field!"
                    },
                    ExtraFeatures: {
                        required: "Please fill this field!"
                    },
                    file: {
                        filesize_max: "File too large please input less than 800KB"
                    }
                },
                submitHandler: function (form) {
                    SaveTOWService();
                }

            });
        });
    }

    function SaveTOWService() {

        var TOWServiceID = $("#TOWServiceID").val();
        var GarageName = $("#GarageName").val();
        var TypeOfVehicleOwn = $("#TypeOfVehicleOwn").val();
        var MaxPayLoad = $("#MaxPayLoad").val();
        var NoOfVehicleOwn = $("#NoOfVehicleOwn").val();
        var RatePerKm = $("#RatePerKm").val();
        var RangeOfService = $("#RangeOfService").val();
        var ExtraFeatures = $("#ExtraFeatures").val();

        var TOWService = {
            TOWServiceID: TOWServiceID,
            GarageId: GarageName,
            TypeOfVehicleOwn: TypeOfVehicleOwn,
            MaxPayLoad: MaxPayLoad,
            NoOfVehicleOwn: NoOfVehicleOwn,
            RatePerKm: RatePerKm,
            RangeOfService: RangeOfService,
            ExtraFeatures: ExtraFeatures
        }

        var formData = new FormData();
        var file = $('#file').get(0).files;
        formData.append("imageFile", file[0]);
        formData.append("data", JSON.stringify(TOWService));

        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveTOWService", "TOWService")',
            dataType: 'json',
            contentType: false, //must for formdata
            processData: false, //must for formdata
            ContentType: 'application/json; charset=utf-8',
            data: formData,
            success: function (data) {

                var AllFields = data.data;

                if (AllFields.StoreId <= 0) {
                    alert("Server error!");
                }
                else {
                    alert("Successfully saved!");
                    window.location.href = '@Url.Action("Index", "TOWService")';
                }

            }
        });
    }

    function readFile(input) {

        console.log("asda" + input);
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            /*Destroy jcrop initialization other wise it will hold it previous image in img tag*/
            if (jcropApi != null) {
                jcropApi.destroy();
            }
            reader.onload = function (e) {
                $('#imgPhoto').attr('src', "");
                var img = $('#imgPhoto').attr('src', e.target.result);

                /*Current uploaded image size*/
                var width = img[0].height;
                var height = img[0].width;
                $("#lblWidth").text(width + "px");
                $("#lblHeight").text(height + "px");

            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

