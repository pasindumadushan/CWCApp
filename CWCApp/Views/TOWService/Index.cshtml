<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @{
            @Html.Partial("~/Views/PartialView/_Sidebar.cshtml");
        }
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" disabled>
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    @{
                        @Html.Partial("~/Views/PartialView/_Topbar.cshtml");
                    }
                </nav>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Welcome to TOW Services Of Garage</h1>
                    <p class="mb-4">
                        List of TOW serivces related to several Garages alone with details.
                    </p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">

                            <div class="row">
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary">TOW serices</h6>
                                </div>
                                <div class="col-sm-6 text-right">
                                    <a class='btn btn-primary' id="Add" href="@Url.Action("AddView","TOWService")">Add Item</a>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="DT_load" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>GarageName</th>
                                            <th>TypeOfVehicleOwn</th>
                                            <th>MaxPayLoad</th>
                                            <th>NoOfVehicleOwn</th>
                                            <th>RatePerKm</th>
                                            <th>RangeOfService</th>
                                            <th>ExtraFeatures</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Edit modal -->
                    <div class='modal fade' id='EditModal' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true'>
                        <div class='modal-dialog' role='document'>
                            <div class='modal-content'>
                                <div class='modal-header'>
                                    <h5 class='modal-title' id='exampleModalLabel'>Edit</h5>
                                    <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                                        <span aria-hidden='true'>&times;</span>
                                    </button>
                                </div>
                                <div class='modal-body'>
                                    <form Id="TOWServiceForm" novalidate>
                                        <input type="hidden" class="form-control form-control-user" id="TOWServiceID" name="TOWServiceID"
                                               placeholder="TOWServiceId">
                                        <div class="form-group">
                                            <select class="form-control" id="GarageName" name="GarageName" disabled>
                                                <option value="" selected disabled>Select Store...</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="TypeOfVehicleOwn" name="TypeOfVehicleOwn"
                                                   placeholder="Vehicle Type...">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="MaxPayLoad" name="MaxPayLoad"
                                                   placeholder="Max Payload">
                                        </div>
                                        <div class="form-group">
                                            <input type="number" class="form-control form-control-user" id="NoOfVehicleOwn" name="NoOfVehicleOwn"
                                                   placeholder="Amount" min=1>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="RatePerKm" name="RatePerKm"
                                                   placeholder="Rate Per KM...">
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control form-control-user" id="RangeOfService" name="RangeOfService"
                                                      placeholder="Range Of Service..."></textarea>
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control form-control-user" id="ExtraFeatures" name="ExtraFeatures"
                                                      placeholder="Extra Features..."></textarea>
                                        </div>

                                        <div class="form-group">
                                            <Table>
                                                <tr>
                                                    <td><label>Image</label></td>
                                                    <td>
                                                        <div class="col-md-offset-2 col-md-10">
                                                            <input type="file" id="file" name="file" accept="image/*">
                                                        </div>
                                                    </td>
                                                </tr>
                                            </Table>
                                        </div>

                                        <div class="form-group">
                                            <tr>
                                                <td>
                                                    <div style="height:200px; width:200px; overflow:auto;">
                                                        <img id="imgPhoto" alt="Image">
                                                    </div>
                                                </td>
                                                <td>
                                                    <canvas id="canvas" height="5" width="5" style="vertical-align:top;"></canvas>
                                                </td>
                                            </tr>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <input type="submit" value="Update" class="btn btn-primary btn-user btn-block" />
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <a class='btn btn-primary btn-user btn-block' id="Add" href="@Url.Action("Index","TOWService")">Go Back</a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Edit modal -->

                </div>

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            @{
                @Html.Partial("~/Views/PartialView/_Footer.cshtml");
            }
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    @{
        @Html.Partial("~/Views/PartialView/_LogoutModal.cshtml");
    }

</body>

