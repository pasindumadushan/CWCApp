@{
    ViewBag.Title = "Home Page";
}

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @{
            @Html.Partial("~/Views/PartialView/_Sidebar.cshtml");
        }
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" disabled>
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    @{
                        @Html.Partial("~/Views/PartialView/_Topbar.cshtml");
                    }
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Home</h6>
                                </div>

                                <div class="card-body">
                                    <div class="w3-content w3-display-container">
                                        <div class="row">
                                            <img class="mySlides" src="/Images/SystemPhotos/repir.jpg" style="width:100%">
                                            <img class="mySlides" src="/Images/SystemPhotos/rent.jpg" style="width:100%">
                                            <img class="mySlides" src="/Images/SystemPhotos/parts.jpg" style="width:100%">
                                            <img class="mySlides" src="/Images/SystemPhotos/tow.jpg" style="width:100%">
                                        </div>
                                        <div class="row">
                                            <div class="span6" style="float: none; margin: 0 auto;">
                                                <button class="btn btn-light btn-circle btn-sm" id="leftButton" onclick="plusDivs(1)">
                                                    <i class="fas fa-angle-left "></i>
                                                </button>
                                                <button class="btn btn-light btn-circle btn-sm" id="rightButton" onclick="plusDivs(-1)">
                                                    <i class="fas fa-angle-right "></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card mb-4 border-left-primary">
                                <div class="card-body font-weight-bold text-gray-900">
                                    CWC Services
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <!-- First Column -->
                        <div class="col-lg-3">

                            <!-- Custom Text Color Utilities -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-gray-900">
                                        <a class="fas fa-fw fa-spinner" style="width:auto" href="@Url.Action("VehicleParts","VehiclePartsStoreItem")">  PartsShop</a>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="p-3 bg-gray-200">Spare part you can buy from any shop by phone call. </div>
                                </div>
                            </div>

                        </div>

                        <!-- Second Column -->
                        <div class="col-lg-3">

                            <!-- Background Gradient Utilities -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-gray-900">
                                        <a class="fas fa-fw fa-spinner" style="width:auto" href="@Url.Action("RepairServices","VehicleRepairService")">  Repair</a>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="p-3 bg-gray-200">You can repair your vehicle by visit the garage or bring them into your place</div>
                                </div>
                            </div>

                        </div>

                        <!-- Third Column -->
                        <div class="col-lg-3">

                            <!-- Grayscale Utilities -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-gray-900">
                                        <a class="fas fa-fw fa-spinner" style="width:auto" href="@Url.Action("TOWSerivces","TOWService")">  TOW</a>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="p-3 bg-gray-200">TOW Service help you to push your wreaked vehicle to the places</div>
                                </div>
                            </div>
                        </div>

                        <!-- Forth Column -->
                        <div class="col-lg-3">

                            <!-- Grayscale Utilities -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-gray-900">
                                        <a class="fas fa-fw fa-spinner" style="width:auto" href="@Url.Action("RentalServices","VehicleRantalService")">  Rent</a>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="p-3 bg-gray-200">You can get vehicle for few days by this rent service</div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            @{
                @Html.Partial("~/Views/PartialView/_Footer.cshtml");
            }
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    @{
        @Html.Partial("~/Views/PartialView/_LogoutModal.cshtml");
    }

</body>

<script src="~/wwwroot/Bootstrap Design/vendor/jquery/jquery.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/js/sb-admin-2.min.js"></script>
<script src="~/wwwroot/lib/jquery-validation/dist/jquery.validate.js"></script>
<style>
    .mySlides {
        display: none;
    }
</style>
<script>
    $(document).ready(function () {
        setInterval(function () {
            $("#rightButton").click();
        }, 5000);
    });

    var slideIndex = 1;
    showDivs(slideIndex);

    function plusDivs(n) {
        showDivs(slideIndex += n);
    }

    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        if (n > x.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = x.length }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        x[slideIndex - 1].style.display = "block";
    }
</script>

