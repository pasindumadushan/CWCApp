<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @{
            @Html.Partial("~/Views/PartialView/_Sidebar.cshtml");
        }
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" disabled>
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    @{
                        @Html.Partial("~/Views/PartialView/_Topbar.cshtml");
                    }
                </nav>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Welcome to stores</h1>
                    <p class="mb-4">
                        List of store related to several spare parts alone with details.
                    </p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">

                            <div class="row">
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary">Store</h6>
                                </div>
                                <div class="col-sm-6 text-right">
                                    <a class='btn btn-primary' id="Add" href="@Url.Action("AddView","VehiclePartsStore")">Add store</a>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="DT_load" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Store Name</th>
                                            <th>Address</th>
                                            <th>Contact Number</th>
                                            <th>Shopping Methods</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Edit modal -->
                    <div class='modal fade' id='EditModal' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true'>
                        <div class='modal-dialog' role='document'>
                            <div class='modal-content'>
                                <div class='modal-header'>
                                    <h5 class='modal-title' id='exampleModalLabel'>Edit</h5>
                                    <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                                        <span aria-hidden='true'>&times;</span>
                                    </button>
                                </div>
                                <div class='modal-body'>
                                    <form Id="StoreForm" novalidate>
                                        <input type="hidden" class="form-control form-control-user" id="StoreId" name="StoreId">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="StoreName" name="StoreName"
                                                   placeholder="Store Name" disabled>
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control form-control-user" id="AddressOfStore" name="AddressOfStore"
                                                      placeholder="Address..."></textarea>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="ContactNumber" name="ContactNumber"
                                                   placeholder="Contact Number...">
                                        </div>
                                        <div class="form-group">
                                            <select class="form-control" id="ShoppingMethod" name="ShoppingMethod">
                                                <option value="" selected disabled>Shopping Method...</option>
                                            </select>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <input type="submit" value="Update" class="btn btn-primary btn-user btn-block" />
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <button type='button' class='btn btn-secondary btn-user btn-block' data-dismiss='modal'>Cancle</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Edit modal -->

                </div>

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            @{
                @Html.Partial("~/Views/PartialView/_Footer.cshtml");
            }
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    @{
        @Html.Partial("~/Views/PartialView/_LogoutModal.cshtml");
    }

</body>

<script src="~/wwwroot/Bootstrap Design/vendor/jquery/jquery.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/js/sb-admin-2.min.js"></script>
<script src="~/wwwroot/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/wwwroot/Bootstrap Design/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        LoadTable();
        LoadShoppingMethods();
        ValidateVehiclePartsStore();

        $('#DT_load').on('click', '#DeleteYes', function () {
            DeleteRecord($(this).attr("data-id"));
            //delete($(this).attr("data-id"));
        });

        $('#DT_load').on('click', '#Edit', function () {
            LoadFieldsEdit($(this).attr("data-id"));
        });

    });

    function LoadTable() {

                dataTable = $('#DT_load').DataTable({
                    "bDestroy": true,
                    "ajax": {
                        "url": '@Url.Action("LoadTableData", "VehiclePartsStore")',
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "StoreName", "width": "20%" },
                        { "data": "AddressOfStore", "width": "20%" },
                        { "data": "ContactNumber", "width": "20%" },
                        { "data": "ShoppingMethod", "width": "10%" },
                        {
                            "data": "StoreId",
                            "render": function (data) {
                                return `<table class='table' width='100%' cellspacing='0' cellpadding='0'><tbody>

                                        <tr><td style='border: none;'>
                                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#EditModal" id="Edit" data-id='${data}'>
                                            Edit
                                        </button>
                                        </td>

                                        <td style='border: none;'>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeleteModal${data}" id="Delete" data-id='${data}'>
                                            Delete
                                        </button>
                                        </td></tr>

                                        <div class='modal fade' id='DeleteModal${data}' tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true'>
                                        <div class='modal-dialog' role='document'>
                                        <div class='modal-content'>
                                        <div class='modal-header'>
                                        <h5 class='modal-title' id='exampleModalLabel'>Warning!</h5>
                                        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
                                        <span aria-hidden='true'>&times;</span>
                                        </button>
                                        </div>
                                        <div class='modal-body'>
                                        Are you sure, do you want to delete this record?
                                        </div>
                                        <div class='modal-footer'>
                                        <button type='button' class='btn btn-primary' id='DeleteYes' data-id='${data}'>Yes</button>
                                        <button type='button' class='btn btn-secondary' data-dismiss='modal'>No</button>
                                        </div>
                                        </div>
                                        </div>
                                        </div>
                                        `;
                            }, "width": "10%"
                        }
                    ],
                    "language": {
                        "emptyTable": "no data found"
                    },
                    "width": "100%"
                });

    }

    function LoadFieldsEdit(storeId) {

        var storeId = {
            storeId: storeId
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadFieldsEdit", "VehiclePartsStore")',
            dataType: 'json',
            data: storeId,
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {

                var AllFields = data.data;
                if (data.data != null) {
                    $("#StoreId").val(AllFields.StoreId);
                    $("#StoreName").val(AllFields.StoreName);
                    $("#ContactNumber").val(AllFields.ContactNumber);
                    $("#AddressOfStore").val(AllFields.AddressOfStore);
                    $("#ShoppingMethod").val(AllFields.ShoppingMethod);
                }
                else {
                    alert("Server Error!");
                    $("#storeId").val(0);
                }


            }
        });
    }

    function ValidateVehiclePartsStore() {
        $(function () {
            jQuery.validator.addMethod("noSpace", function (value, element) {
                return value.indexOf(" ") < 0 && value != "";
            }, "No space please and don't leave it empty");

            jQuery.validator.addMethod("exactlength", function (value, element, param) {
                return this.optional(element) || value.length == param;
            }, $.validator.format("Please enter exactly {0} characters."));

            $("#StoreForm").validate({

                errorPlacement: function (error, element) {
                    var placement = $(element).data('error');
                    if (placement) {
                        $(placement).append(error)
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    StoreName: {
                        required: true
                        //umailExist: true,
                    },
                    AddressOfStore: {
                        required: true
                    },
                    ShoppingMethod: {
                        required: true
                    },
                    ContactNumber: {
                        required: true
                    }
                },
                messages: {
                    StoreName: {
                        required: "Please fill this field!"
                        //umailExist: true,
                    },
                    AddressOfStore: {
                        required: "Please fill this field!"
                    },
                    ShoppingMethod: {
                        required: "Please fill this field!"
                    },
                    ContactNumber: {
                        required: "Please fill this field!"
                    }
                },
                submitHandler: function (form) {
                    SaveVehiclePartsStore();
                }

            });
        });
    }

    function SaveVehiclePartsStore() {

        var StoreId = $("#StoreId").val();
        var storeName = $("#StoreName").val();
        var addressOfStore = $("#AddressOfStore").val();
        var contactNumber = $("#ContactNumber").val();
        var shoppingMethod = $("#ShoppingMethod").val();

        var vehiclePartsStore = {
            StoreId: StoreId,
            StoreName: storeName,
            AddressOfStore: addressOfStore,
            ContactNumber: contactNumber,
            ShoppingMethod: shoppingMethod
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveVehiclePartsStore", "VehiclePartsStore")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            data: vehiclePartsStore,
            success: function (data) {

                var AllFields = data.data;

                if (AllFields.StoreId <= 0) {
                    alert("Server error!");
                }
                else {
                    alert("Successfully updated!");
                    $('#EditModal').modal('toggle');
                    window.location.href = '@Url.Action("Index","VehiclePartsStore")';
                }

            }
        });
    }

    function DeleteRecord(storeId) {

        var storeId = storeId;

        var storeId = {
            storeId: storeId
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteVehiclePartsStore", "VehiclePartsStore")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            data: storeId,
            success: function (data) {

                var AllFields = data.data;

                if (AllFields.StoreId <= 0) {
                    alert("Server error!");
                }
                else {
                    alert("Successfully deleted!");
                    $('#DeleteModal' + AllFields.StoreId).modal('toggle');
                    window.location.href = '@Url.Action("Index","VehiclePartsStore")';
                }

            }
        });
    }

    function LoadShoppingMethods() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("LoadShoppingMethods", "VehiclePartsStore")',
            dataType: 'json',
            ContentType: 'application/json; charset=utf-8',
            success: function (data) {

                var ShoppingMethods = data.data;
                for (var i = 0; i < ShoppingMethods.length; i++) {

                    var newOption = new Option(ShoppingMethods[i].ShoppingMethod, ShoppingMethods[i].ShoppingMethodId, false, false);
                    $('#ShoppingMethod').append(newOption).trigger('change');
                }

            }
        });
    }
</script>